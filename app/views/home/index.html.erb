<div class='w-5/6 2xl:w-3/6 text-center'>
  <h1 class="text-2xl font-semibold">Let's calculate batting average! Just upload a file and give us few seconds</h1>

  <%= form_with url: imports_path, multipart: true, class: "mt-8" do |form| %>
    <div class="flex justify-center items-center gap-4">
      <%= form.file_field :csv_file,
        class: 'block w-1/2 text-sm text-slate-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-pink-50 file:text-pink-700 hover:file:bg-pink-100'
      %>
      <%= form.submit "Upload", class: 'rounded-xl bg-pink-200 px-8 py-2 font-semibold cursor-pointer' %>
    </div>

    <% if @seasons.present? %>
      <div class="mt-24">
        <div class="w-full flex items-center bg-red-100 font-bold p-2">
          <div class="w-1/4">
            PlayerID
          </div>
          <div class="w-1/4">
            yearID
          </div>
          <div class="w-1/4">
            Team name(s)
          </div>
          <div class="w-1/4">
            Batting average
          </div>
        </div>

        <% @seasons.each do |season| %>
          <div class="w-full flex items-center font-bold p-2">
            <div class="w-1/4">
              <%= season.player.public_id %>
            </div>
            <div class="w-1/4">
              <%= season.year %>
            </div>
            <div class="w-1/4">
              <%= season.season_segments.map(&:team).map(&:name).join(", ") %>
            </div>
            <div class="w-1/4">
              <%= season.batting_avg %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
